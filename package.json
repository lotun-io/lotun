{
  "name": "lotun",
  "version": "0.0.3",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "test": "npm run prettier && npm run lint",
    "lint": "eslint 'packages/**/*.js'",
    "lint:format": "eslint --fix 'packages/**/*.js'",
    "prettier:format": "prettier --write 'packages/**/*.js'",
    "prettier": "prettier -l 'packages/**/*.js'"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run prettier:format && npm run lint:format"
    }
  },
  "author": "FreshIT, s.r.o.",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-async-to-generator": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "babel-eslint": "^8.2.6",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "=4.19.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^5.1.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.1.2",
    "lerna": "^3.4.3",
    "prettier": "^1.14.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lotun-io/lotun"
  },
  "description": "Monorepo for all Lotun Client packages (client, cli and electron app)",
  "dependencies": {
    "arp": "0.0.3",
    "core-js": "^3.1.4",
    "default-gateway": "^3.0.1",
    "graphql-client": "^2.0.1",
    "http-proxy-agent": "^2.1.0",
    "https-proxy-agent": "^2.2.1",
    "systeminformation": "^3.45.6",
    "ws": "^6.1.0"
  }
}
