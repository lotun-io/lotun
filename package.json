{
  "name": "lotun",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "test": "npm run prettier && npm run lint",
    "lint": "eslint 'packages/**/*.js'",
    "lint:format": "eslint --fix 'packages/**/*.js'",
    "prettier:format": "prettier --write 'packages/**/*.js'",
    "prettier": "prettier -l 'packages/**/*.js'"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run prettier:format && npm run lint:format"
    }
  },
  "author": "FreshIT, s.r.o.",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "eslint": "=4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "husky": "^1.0.0-rc.13",
    "lerna": "^3.0.0-rc.0",
    "prettier": "^1.13.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lotun-io/lotun"
  },
  "description": "Monorepo for all Lotun Client packages (client, cli and electron app)"
}
