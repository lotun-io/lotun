{
  "name": "@lotun/cli",
  "author": "FreshIT, s.r.o.",
  "version": "1.0.12",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "build": "ts-patch install && rm -rf dist && tsc",
    "test": "npm run test:prettier",
    "test:prettier": "prettier --check \"src/**/*.ts\"",
    "docker:build": "export VERSION=$(npm show . version) && docker build -t lotun/cli:latest -t lotun/cli:$VERSION -f docker/Dockerfile docker",
    "docker:push": "docker push lotun/cli:1.0.9 && docker push lotun/cli:latest"
  },
  "bin": {
    "lotun": "dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lotun-io/lotun/tree/master/packages/lotun-cli"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@lotun/client": "^1.0.5",
    "chalk": "^3.0.0",
    "commander": "^4.1.1",
    "latest-version": "^5.1.0"
  },
  "devDependencies": {
    "@types/node": "^12.12.29",
    "prettier": "^1.19.1",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "ts-patch": "^1.0.5",
    "typescript": "^3.8.3",
    "typescript-transform-paths": "^1.1.14"
  }
}
