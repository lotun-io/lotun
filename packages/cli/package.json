{
  "name": "@lotun/cli",
  "author": "FreshIT, s.r.o.",
  "version": "1.1.4",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:watch": "tsc -w",
    "test": "npm run test:prettier",
    "test:prettier": "prettier --check \"src/**/*.ts\"",
    "docker:build": "export VERSION=$(npm show . version) && docker build -t lotun/cli:latest -t lotun/cli:$VERSION -f docker/Dockerfile docker",
    "docker:push": "docker push lotun/cli:1.1.0 && docker push lotun/cli:latest",
    "prepare": "ts-patch install"
  },
  "bin": {
    "lotun": "dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lotun-io/lotun/tree/master/packages/lotun-cli"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@lotun/client": "^1.1.4",
    "chalk": "^4.1.0",
    "commander": "^5.1.0",
    "npm": "^6.14.5",
    "source-map-support": "^0.5.19",
    "update-notifier": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^12.12.44",
    "@types/source-map-support": "^0.5.1",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.49",
    "ts-patch": "^1.2.5",
    "typescript": "^3.9.5",
    "typescript-transform-paths": "^1.1.14"
  }
}
